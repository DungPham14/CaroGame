<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linear_layout_item_bluetooth_device"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/padding_small"
              android:paddingLeft="@dimen/padding_medium"
              android:paddingRight="@dimen/padding_medium"
              android:paddingTop="@dimen/padding_small">

    <TextView
        android:id="@+id/text_view_device_name"
        style="@style/text_view_device"
        android:text="@string/sample_device_name"/>

    <TextView
        android:id="@+id/text_view_device_address"
        style="@style/text_view_device"
        android:text="@string/sample_device_address"/>
</LinearLayout>